<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtEmpleadoCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtEmpleadoNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtEmpleadoApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        app:layout_constraintTop_toBottomOf="@+id/txtEmpleadoCod"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtEmpleadoPuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puesto"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/txtEmpleadoNom"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtEmpleadoSalario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEmpleadoApellidos"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtEmpleadoCodDep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departamento"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/txtEmpleadoPuesto"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>